{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Voice Call Answer",
  "type": "object",
  "required": ["type", "command", "payload"],
  "properties": {
    "type": {
      "const": "request"
    },
    "command": {
      "const": "voice/answer"
    },
    "payload": {
      "type": "object",
      "required": ["call_id"],
      "properties": {
        "call_id": {
          "type": "string",
          "description": "Unique call session identifier"
        },
        "codec": {
          "type": "string",
          "enum": ["opus", "pcm"],
          "default": "opus"
        }
      }
    }
  }
}
