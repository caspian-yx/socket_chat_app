{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "type", "timestamp", "command", "payload"],
  "properties": {
    "command": {"const": "file/accept"},
    "payload": {
      "type": "object",
      "properties": {
        "session_id": {"type": "string"},
        "channel_host": {"type": "string"},
        "channel_port": {"type": "integer"},
        "file_name": {"type": "string"},
        "file_size": {"type": "integer"}
      },
      "anyOf": [
        {"required": ["session_id"]},
        {"required": ["session_id", "channel_host", "channel_port"]}
      ]
    }
  }
}
