{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "type", "timestamp", "command", "payload"],
  "properties": {
    "command": {"const": "file/reject"},
    "payload": {
      "type": "object",
      "properties": {
        "session_id": {"type": "string"},
        "from_user": {"type": "string"},
        "file_name": {"type": "string"},
        "file_size": {"type": "integer"},
        "error_message": {"type": "string"}
      },
      "anyOf": [
        {"required": ["session_id"]},
        {"required": ["session_id", "from_user"]}
      ]
    }
  }
}
